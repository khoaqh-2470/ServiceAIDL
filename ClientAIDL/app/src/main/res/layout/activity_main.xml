<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonConnectAIDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Connect AIDL" />

    <Button
        android:id="@+id/buttonSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConnectAIDL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="getSongName" />

    <Button
        android:id="@+id/buttonConnectMessenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSongName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Connect Messenger" />

    <EditText
        android:id="@+id/edtMessenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConnectMessenger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:text="1"
        android:textColor="#000"
        android:textColorHint="#000" />

    <Button
        android:id="@+id/buttonGetMessenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtMessenger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="say"
        android:text="getMessenger" />
</RelativeLayout>